<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h1>signup form</h1>
  <div class="col-6 offset-3">
    <form method="POST" action="/signup" class="needs-validation" novalidate>
      <div class="mt-3">
        <label for="username">Username</label>
        <br />
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mt-3">
        <label for="email">Email</label>
        <br />
        <input
          name="email"
          id="email"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div class="mt-3">
        <label for="password">Password</label>
        <br />
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <br />

      <button class="addbtn" role="button">
        <span class="text">Signup</span>
      </button>
    </form>
  </div>
</div>
