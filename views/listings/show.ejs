<% layout("/layouts/boilerplate") %>
<body>
  <div class="listing-cont">
    <h3 class="l-c-h"><%= listing.title %></h3>
    <div class="listinginfo">
      <div class="li-im">
        <img src="<%= listing.image.url %>" alt="Place pick" />
      </div>
      <br />
      <div class="li-des">
        <!-- <i><%= listing.owner.username %></i>
        <br> -->
        <b>Description :</b>
        <%= listing.description %>
      </div>
      <br />
      <div class="li-pr">
        <b>Price :</b>
        &#8377; <%= listing.price%>/night
      </div>
      <br />
      <div class="li-adr">
        <b>Countery:</b><%= listing.country %>&nbsp;&nbsp;&nbsp;
        <b>Location:</b><%= listing.location %>
      </div>
      <br />
      <% if ( currUser && currUser._id.equals(listing.owner._id)){ %>
      <div class="li-btn">
        <div class="editbtn">
          <a href="/listings/<%=listing._id %>/edit">
            <button class="addbtn" role="button">
              <span class="text">Edit</span>
            </button>
          </a>
        </div>
        <div class="delete-btn">
          <form
            method="POST"
            action="/listings/<%=listing._id%>?_method=DELETE"
          >
            <button class="detbtn" role="button">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
    <hr style="width: 100%; border: 3px solid black" />
    <div class="review">
      <div class="reviewinfo">
        <p><b>Reviews</b></p>
        <br />
        <div class="reviewscard">
          <% for(review of listing.reviews){ %>
          <div class="reviewcard col-5 ms-3 mb-3">
            <div class="card-body">
              <b> <p class="card-text"><%= review.author.username %></p></b
              ><br />
              <p
                class="starability-result"
                data-rating="<%= review.rating %>"
              ></p>
              <p class="card-text"><%= review.comment %></p>
            </div>

            <form
              method="POST"
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            >
              <button class="btn btn-sm btn-outline-secondary">Delete</button>
            </form>
          </div>
          <% } %>
        </div>
      </div>

      <% if(currUser) { %>
      <div class="reviewform">
        <h4>Leave a Review</h4>
        <form
          method="POST"
          action="/listings/<%= listing._id %>/reviews"
          novalidate
          class="needs-validation"
        >
          <div class="mb-3 rating-range">
            <label for="rating" class="form-label mb-2">Rating</label>
            <fieldset class="starability-basic">
              <input
                type="radio"
                id="no-rate"
                class="input-no-rate"
                name="review[rating]"
                value="1"
                checked
                aria-label="No rating."
              />
              <input
                type="radio"
                id="first-rate1"
                name="review[rating]"
                value="1"
              />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input
                type="radio"
                id="first-rate2"
                name="review[rating]"
                value="2"
              />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input
                type="radio"
                id="first-rate3"
                name="review[rating]"
                value="3"
              />
              <label for="first-rate3" title="Average">3 stars</label>
              <input
                type="radio"
                id="first-rate4"
                name="review[rating]"
                value="4"
              />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input
                type="radio"
                id="first-rate5"
                name="review[rating]"
                value="5"
              />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

          <div>
            <label for="comment" class="form-label">Comments</label>
            <textarea
              name="review[comment]"
              id="comment"
              cols="15"
              rows="5"
              class="form-control"
              required
            ></textarea>
            <div class="invalid-feedback">Please write any Comment</div>
          </div>

          <button class="btn btn-outline-dark mt-3">Submit</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</body>
